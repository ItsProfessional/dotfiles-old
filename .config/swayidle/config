# Locker (pauses media before locking aswell)
lock "playerctl pause; swaylock"

# Lock before suspending (includes lid close, since I have that set to suspend)
before-sleep "swaylock"

# Dim screen
timeout 115 "brillo -q -G > /tmp/prev_backlight; brillo -q -u 150000 -S 40" resume "brillo -q -u 150000 -S $(/usr/bin/cat /tmp/prev_backlight)"
after-resume "brillo -q -u 150000 -S $(/usr/bin/cat /tmp/prev_backlight)"

# Lock and turn off screen after 2 mins of inactivity 
timeout 120 "swaylock & hyprctl dispatch dpms off" resume "hyprctl dispatch dpms on"

# Suspend after 4 mins of inactivity
timeout 240 "systemctl suspend"

